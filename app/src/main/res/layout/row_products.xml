<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/prod_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/prod_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_thumbnail"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/prod_name_padding"
                android:paddingRight="@dimen/prod_name_padding"
                android:paddingTop="@dimen/prod_name_padding"
                android:textColor="@color/prod_name"
                android:textSize="@dimen/prod_name" />

            <TextView
                android:id="@+id/prod_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_name"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/prod_desc_padding_bottom"
                android:paddingLeft="@dimen/prod_name_padding"
                android:paddingRight="@dimen/prod_name_padding"
                android:textSize="@dimen/prod_desc" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>