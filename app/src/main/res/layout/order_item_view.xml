<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_marginRight="16dp"
            android:src="@drawable/n264"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_title"
            android:text="sajal"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_image"
            android:layout_toEndOf="@+id/item_image" />

        <TextView
            android:layout_width="wrap_content"
            android:text="hello"
            android:layout_height="wrap_content"
            android:id="@+id/item_detail"
            android:layout_below="@+id/item_title"
            android:layout_toRightOf="@+id/item_image"
            android:layout_toEndOf="@+id/item_image"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/item_inc"
            android:text="+"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text="hello"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/item_quantity"

            android:layout_alignBaseline="@+id/item_title"
            android:layout_alignBottom="@+id/item_title"
            android:layout_toLeftOf="@+id/item_inc"
            android:layout_toStartOf="@+id/item_inc"
            android:visibility="gone"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/item_dec"
            android:text="-"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/item_quantity"
            android:layout_toStartOf="@+id/item_quantity"
            android:visibility="gone"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>